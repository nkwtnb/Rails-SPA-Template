{
  "compilerOptions": {
    // ソースマップを有効化
    "sourceMap": true,
    // TSはECMAScript 5に変換
    "target": "ES5",
    // TSのモジュールはES Modulesとして出力
    "module": "ES2015",
    "moduleResolution": "node",
    // 厳密モードとして設定
    "strict": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "typeRoots": [
      "./types",
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}